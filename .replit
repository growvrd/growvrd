# Replit Configuration
[run]
command = "python3 app.py"

[env]
PYTHONPATH = "/home/runner/$REPL_SLUG"
PYTHONUNBUFFERED = "1"
FLASK_APP = "app.py"
FLASK_ENV = "development"
PORT = "5000"

# AWS Configuration - Set these in Replit Secrets
# AWS_ACCESS_KEY_ID = ""
# AWS_SECRET_ACCESS_KEY = ""
# AWS_DEFAULT_REGION = "us-east-1"
# COGNITO_USER_POOL_ID = ""
# COGNITO_CLIENT_ID = ""

[features]
search = true

[deployment]
run = [
  "chmod +x replit_setup.sh",
  "./replit_setup.sh",
  "pip install -r requirements.txt"
]

[packager]
ignoredPackages = ["python2.7", "python2"]

[debugger]
support = true
interpreter = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "requirements.txt"]

[languages]

[languages.python]
pattern = "**/*.py"

[languages.python.languageServer]
start = "pylsp"