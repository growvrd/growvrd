# ======================
# Application Settings
# ======================
FLASK_APP=app.py
FLASK_ENV=development
FLASK_SECRET_KEY=your-flask-secret-key-here
DEBUG=True

# ======================
# AWS Configuration
# ======================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# ======================
# AWS Cognito Configuration
# ======================
COGNITO_USER_POOL_ID=us-east-1_3aYkf6zO8
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_DOMAIN=your-cognito-domain.auth.us-east-1.amazoncognito.com
COGNITO_CALLBACK_URL=http://localhost:5000/callback

# ======================
# Perenual API Configuration
# ======================
PERENUAL_API_KEY=your-perenual-api-key
PERENUAL_API_ENDPOINT=https://perenual.com/api

# ======================
# OpenAI Configuration
# ======================
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-org-id  # If applicable
OPENAI_MODEL=gpt-4  # or your preferred model

# ======================
# Stripe Configuration
# ======================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PRICE_ID_MONTHLY=price_xxxxxx  # Your subscription price IDs
STRIPE_PRICE_ID_YEARLY=price_yyyyyy

# ======================
# Database Configuration
# ======================
DATABASE_URL=sqlite:///growvrd.db  # or your database URL
SQLALCHEMY_DATABASE_URI=${DATABASE_URL}
SQLALCHEMY_TRACK_MODIFICATIONS=False

# ======================
# Email Configuration (if using AWS SES or similar)
# ======================
MAIL_SERVER=email-smtp.us-east-1.amazonaws.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# ======================
# Application URLs
# ======================
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000  # If using a separate frontend
